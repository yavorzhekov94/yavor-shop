{% extends 'base.html.twig' %}

{% block title %}Hello FurnitureController!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            <h3> {{ message }} </h3>
        </div>
    {% endfor %}
<h1 class="edit-product">EDit products here</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Number:</td>
            <td>Name:</td>
            <td>Price:</td>
            <td>Type:</td>
            <td>In stock:</td>
            <td>Actions:</td>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td> <a href="{{ path('furniture.detail', {id: product.id})}}">{{ product.name }}</a></td>
            <td>{{ product.price }}</td>
            <td>{{ product.category }}</td>
            <td>
                {% if product.quantity > 0 %}
                <h1> In stock</h1>
                {% else %}
                <h1> Out of stock</h1>
                {% endif %}
            </td>
            <td>
                <a href="#">Edit</a>
                <a href="{{ path('furniture.delete', {id: product.id})}}">Delete</a>
            </td>
        </tr>
        {% endfor %}
        <tr>
            <td> <a href="{{ path('furniture.create')}}">Create Product</a></td>
        </tr>
    </tbody>
</table>
{% endblock %}
